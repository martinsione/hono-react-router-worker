{
  "name": "hono-react-router-worker",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.10.0"
  },
  "scripts": {
    "dev": "react-router dev",
    "build": "react-router build",
    "deploy": "react-router build && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "format": "prettier --write src --ignore-path=.gitignore --cache"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports",
      "prettier-plugin-tailwindcss"
    ]
  },
  "dependencies": {
    "@react-router/node": "7.0.0-pre.4",
    "hono": "^4.6.8",
    "isbot": "^5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "7.0.0-pre.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241022.0",
    "@hono/vite-dev-server": "^0.16.0",
    "@react-router/dev": "7.0.0-pre.4",
    "@tailwindcss/vite": "4.0.0-alpha.31",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "4.0.0-alpha.31",
    "vite": "^5.4.10",
    "vite-tsconfig-paths": "^5.0.1",
    "wrangler": "^3.83.0"
  }
}
