{
  "name": "hono-react-router-worker",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.10.0"
  },
  "scripts": {
    "dev": "react-router dev",
    "build": "react-router build",
    "deploy": "react-router build && wrangler deploy",
    "typegen": "react-router typegen && wrangler types --env-interface CloudflareBindings",
    "format": "prettier --write src --ignore-path=.gitignore --cache",
    "db:migrate": "dotenv -e .env -- wrangler d1 migrations apply DB",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports",
      "prettier-plugin-tailwindcss"
    ],
    "organizeImportsSkipDestructiveCodeActions": true
  },
  "dependencies": {
    "@auth/core": "^0.37.2",
    "@auth/drizzle-adapter": "^1.7.2",
    "@hono/auth-js": "^1.0.13",
    "@hono/zod-validator": "^0.4.1",
    "@hookform/resolvers": "^3.9.1",
    "@radix-ui/react-icons": "^1.3.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@react-router/node": "7.0.0-pre.4",
    "@tanstack/react-query": "^5.59.19",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.36.0",
    "drizzle-zod": "^0.5.1",
    "framer-motion": "^11.11.11",
    "hono": "^4.6.8",
    "isbot": "^5",
    "lucide-react": "^0.454.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.1",
    "react-router": "7.0.0-pre.4",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241022.0",
    "@hono/vite-dev-server": "^0.16.0",
    "@react-router/dev": "7.0.0-pre.4",
    "@tailwindcss/vite": "4.0.0-alpha.31",
    "@types/bcryptjs": "^2.4.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "dotenv-cli": "^7.4.2",
    "drizzle-kit": "^0.27.1",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "4.0.0-alpha.31",
    "vite": "^5.4.10",
    "vite-tsconfig-paths": "^5.0.1",
    "wrangler": "^3.83.0"
  }
}
